<Window x:Class="AST_Code_Generation.OpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AST_Code_Generation"
        mc:Ignorable="d"
        Title="OpWindow" Height="150" Width="150">
    <StackPanel>
        <StackPanel>
            <Label x:Name="Title" Content="Enter op type: " FontWeight="Bold"></Label>

            <TextBox x:Name="Value" Margin="10" Width="100" HorizontalAlignment="Left"></TextBox>

            <Button x:Name="B" Width="100" Margin="10" HorizontalAlignment="Left" Content="Add Operator" Click="B_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
